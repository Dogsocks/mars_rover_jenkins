pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Unit Test'){
            steps {
                echo 'Hello World'
            }
        }
        stage('Regression Test'){
            steps {
                echo 'Hello World'
            }
        }
        stage('Deploy') {
            steps {
                echo 'make publish'
            }
        }
    }
}
